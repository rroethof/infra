-a always,exit -F path=/usr/sbin/usernetctl -F perm=x -F auid>=1000 -F auid!=unset -F key=privileged
-a always,exit -F path=/usr/sbin/vlock-main -F perm=x -F auid>=1000 -F auid!=unset -F key=privileged

# Process and session initiation
-w /var/log/btmp -p wa -F key=session
-w /var/log/wtmp -p wa -F key=session
-w /var/run/utmp -p wa -F key=session

# Creation of special files
-a always,exit -F arch=b32 -S mknod -S mknodat -F key=specialfiles
-a always,exit -F arch=b64 -S mknod -S mknodat -F key=specialfiles

# SSH configuration and tools
-w /etc/ssh/sshd_config.d/ -p rwxa -F key=sshd
-w /etc/ssh/sshd_config -p rwxa -F key=sshd

# Sysctl configuration
-w /etc/sysctl.conf -p wa -F key=sysctl
-w {{ sysctl_conf_dir }}/zz-ipv6-hardening.conf -p wa -F key=sysctl
-w {{ sysctl_conf_dir }}/zz-main-hardening.conf -p wa -F key=sysctl
-w {{ sysctl_conf_dir }}/zz-ufw-hardening.conf -p wa -F key=sysctl

# Systemd configuration and tools
-w /bin/journalctl -p x -F key=systemd-tools
-w /bin/systemctl -p x -F key=systemd-tools
-w /etc/systemd -p wa -F key=systemd
-w /lib/systemd -p wa -F key=systemd

# Time changes
-a always,exit -F arch=b32 -S adjtimex,settimeofday,stime,clock_settime -F key=time-change
-a always,exit -F arch=b64 -S adjtimex,settimeofday,clock_settime -F key=time-change
-w /etc/localtime -p wa -F key=time-change
-w /etc/timezone -p wa -F key=time-changezone

# /tmp directories
-w /tmp -p wxa -F key=tmp
-w /var/tmp -p wxa -F key=tmp

# User modifications
-a always,exit -F arch=b32 -S execve -C euid!=uid -F auid!=unset -F key=user_emulation
-a always,exit -F arch=b64 -S execve -C euid!=uid -F auid!=unset -F key=user_emulation
-a always,exit -F arch=b32 -S execve -C uid!=euid -F euid=0 -k setuid
-a always,exit -F arch=b64 -S execve -C uid!=euid -F euid=0 -k setuid
-a always,exit -F arch=b32 -S execve -C gid!=egid -F egid=0 -k setgid
-a always,exit -F arch=b64 -S execve -C gid!=egid -F egid=0 -k setgid
-w /usr/sbin/adduser -p x -F key=user-modification
-w /usr/sbin/useradd -p x -F key=user-modification
-w /usr/sbin/usermod -p x -F key=user-modification

# Set the auditd flag
-e {{ auditd_enable_flag }}